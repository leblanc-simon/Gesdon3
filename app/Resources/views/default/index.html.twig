{% extends 'base.html.twig' %}
{% trans_default_domain 'homepage' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="active">{{ 'homepage'|trans({}, 'breadcrumb') }}</li>
    </ol>

    <div class="homepage">
        <h1>{{ 'title'|trans }}</h1>
    </div>

    <div class="row homepage">
        <div class="col-md-4 col-xs-12">
            <a href="{{ path('donations') }}">
                <i class="icon-money"></i>
                {{ 'donations'|trans }}
            </a>
        </div>
        <div class="col-md-4 col-xs-12">
            <a href="{{ path('contributors') }}">
                <i class="icon-user"></i>
                {{ 'contributors'|trans }}
            </a>
        </div>
        <div class="col-md-4 col-xs-12">
            <a href="">
                <i class="icon-launch"></i>
                {{ 'tasks'|trans }}
            </a>
        </div>
    </div>
{% endblock %}